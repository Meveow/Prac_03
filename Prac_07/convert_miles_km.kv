BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '0'
            id: input_number
            size_hint: 2, 1
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.increment(input_number.text)
            Button:
                text: "Down"
                on_press: app.decrement(input_number.text)
    Button:
        text: "Convert Miles to KM"
    Label:
        id: output_label
        font_size: 50
        color: (1, 1, 1, 1)
